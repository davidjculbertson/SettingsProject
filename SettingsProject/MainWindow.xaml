<Window x:Class="SettingsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingsProject"
        mc:Ignorable="d"
        Title="Project Properties Spike"
        Icon="VisualStudio.Preview.ico"
        Height="800"
        Width="1000"
        Background="#FBFBFB"
        d:DataContext="{d:DesignInstance local:ApplicationViewModel}">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:WatermarkTextBox Grid.Row="0" Grid.Column="0" Text="{Binding SearchViewModel.SearchString, UpdateSourceTrigger=PropertyChanged}" Watermark="Search" Margin="8,8,8,8" Width="150" MinWidth="150" />

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="8">
            <TextBlock Margin="0,4">Application</TextBlock>
            <TextBlock Margin="0,4">Build</TextBlock>
            <TextBlock Margin="0,4">Build Events</TextBlock>
            <TextBlock Margin="0,4">Debug</TextBlock>
            <TextBlock Margin="0,4">Signing</TextBlock>
            <TextBlock Margin="0,4">Code Analysis</TextBlock>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" IsTabStop="False">
            <local:SettingsList  Margin="32,8,16,32" Settings="{Binding SettingsListListViewModel.Settings}" SearchViewModel="{Binding SearchViewModel}" />
        </ScrollViewer>

    </Grid>

</Window>
