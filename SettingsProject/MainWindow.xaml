<Window x:Class="SettingsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#FBFBFB"
        d:DataContext="{d:DesignInstance local:SettingsViewModel}">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2" />
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="PropertyHeadingStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
        <DataTemplate DataType="{x:Type local:StringSetting}">
            <StackPanel Orientation="Vertical" Margin="0, 6">
                <TextBlock Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MultiLineStringSetting}">
            <StackPanel Orientation="Vertical" Margin="0, 6">
                <TextBlock Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="NoWrap" MinHeight="42" MaxHeight="200" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:BoolSetting}">
            <StackPanel Orientation="Vertical" Margin="0, 6">
                <TextBlock Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Value}" Padding="4" />
                    <TextBlock Text="{Binding Description}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EnumSetting}">
            <StackPanel Orientation="Vertical" Margin="0, 6">
                <TextBlock Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <ComboBox ItemsSource="{Binding EnumValues}" SelectedItem="{Binding SelectedValue}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Settings}" Margin="32, 16" />
    </ScrollViewer>

</Window>
