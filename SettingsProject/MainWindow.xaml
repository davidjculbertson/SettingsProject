<Window x:Class="SettingsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2" />
            <Setter Property="Width" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <DataTemplate DataType="{x:Type local:StringSetting}">
            <StackPanel Orientation="Vertical" Margin="0, 6">
                <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" />
                <TextBox Text="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:BoolSetting}">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=Value}" />
                <TextBlock Text="{Binding Path=Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <ItemsControl ItemsSource="{Binding Path=Settings}" Margin="32, 16">
        <!--<ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                    <TextBox Text="{Binding Path=Value}"></TextBox>
                    <Button>OK</Button>
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>-->
    </ItemsControl>
</Window>
