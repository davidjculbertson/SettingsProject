<Window x:Class="SettingsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingsProject"
        mc:Ignorable="d"
        Title="Project Properties Spike"
        Icon="VisualStudio.Preview.ico"
        Height="450"
        Width="800"
        Background="#FBFBFB"
        d:DataContext="{d:DesignInstance local:SettingsViewModel}">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2" />
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="PropertyHeadingStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
        <DataTemplate DataType="{x:Type local:StringSetting}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" TextWrapping="Wrap" />
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MultiLineStringSetting}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="NoWrap" MinHeight="42" MaxHeight="200" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:BoolSetting}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <CheckBox IsChecked="{Binding Value}" Content="{Binding Description}" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EnumSetting}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Style="{StaticResource PropertyHeadingStyle}" />
                <ComboBox ItemsSource="{Binding EnumValues}" SelectedItem="{Binding Value}" />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" IsTabStop="False">
        <ItemsControl ItemsSource="{Binding Settings}" Margin="32, 16" IsTabStop="False">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0, 6">
                        <Grid.ColumnDefinitions>
                            <!-- Modification state indicator -->
                            <ColumnDefinition Width="5" />
                            <!-- Empty column, just for spacing -->
                            <ColumnDefinition Width="8" />
                            <!-- Actual property editor -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#CDCDCD" ToolTip="Non-default value" Visibility="{Binding ModificationState, Converter={x:Static local:Converters.VisibleWhenModified}}" />
                        <Rectangle Grid.Column="0" Fill="#3296D5" ToolTip="Unsaved change" Visibility="{Binding ModificationState, Converter={x:Static local:Converters.VisibleWhenModifiedUnsaved}}" />
                        <ContentPresenter Grid.Column="2" Content="{Binding}" />
                    </Grid>
                  </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>

</Window>
